<%= render "shared/header" %>

<h1>僕と渓谷</h1>
<p>cssはまだです</p>

<div>
  <h2>渓谷一覧</h2>
  <ul>
    <% @tweets.each do |tweet| %>
      <% if @tweets.present? %>
        <li>
          <%= link_to tweet_path(tweet.id), method: :get do %>
          <div>
            <%= image_tag tweet.image.variant(resize: '400x400') if tweet.image.attached? %>
          </div>
          <div>
            <h3><%= tweet.title %></h3>
          </div>
          <div>
            <span>ユーザー：<%= tweet.user.nickname %></span>
          </div>
          <% end %>
        </li>
      <% else %>
        <li>
          <div>
            <h3>渓谷を投稿してね</h3>
          </div>
          <div>
            <span>僕と渓谷</span>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>

<p><%= link_to '投稿ページへ進む', new_tweet_path %></p>