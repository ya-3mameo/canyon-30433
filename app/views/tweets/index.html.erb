<%= render "shared/header" %>

<h1>僕と渓谷</h1>
<p>cssはまだです</p>

<div>
  <h2>渓谷一覧</h2>
  <ul>
    <% @tweets.each do |tweet| %>
      <% if @tweets.present? %>
        <li>
          <div>
            <%= link_to image_tag(tweet.image, class: :card_img ), tweet_path(tweet.id), method: :get %>
          </div>
          <div>
            <h3><%= link_to tweet.title, tweet_path(tweet.id), method: :get %></h3>
          </div>
          <div>
            <span><%= link_to "ユーザー：#{tweet.user.nickname}", user_path(tweet.user.id), method: :get %></span>
          </div>
        </li>
      <% else %>
        <li>
          <div>
            <h3>渓谷を投稿してね</h3>
          </div>
          <div>
            <span>僕と渓谷</span>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>

<p><%= link_to '投稿ページへ進む', new_tweet_path %></p>