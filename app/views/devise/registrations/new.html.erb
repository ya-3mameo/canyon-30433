<div class="main">
  <div class="tweet-contents">
    <h2 class="tweet-contents-title">新規登録</h2>
  </div>

  <div class="form-content">
    <%= form_with model: @user, url: user_registration_path, method: :post, class: 'registration-main', local: true do |f| %>
      <%= render "shared/error_messages", model: f.object %>

      <div class="field">
        <label class="form-text">ユーザー名【必須】</label><br />
        <%= f.text_field :nickname, class:"user-small-field", autofocus: true, placeholder:"例) keikokusann" %>
      </div>

      <div class="field">
        <label class="form-text">Eメールアドレス【必須】</label><br />
        <%= f.email_field :email, class:"user-small-field", autofocus: true, autocomplete: "email", placeholder:"PC・携帯どちらでも可" %>
      </div>

      <div class="field">
        <label class="form-text">パスワード【必須】</label><br />
        <%= f.password_field :password, class:"user-small-field", autocomplete: "new-password", placeholder:"6文字以上の半角英数字" %>
      </div>

      <div class="field">
        <label class="form-text">パスワード確認用【必須】</label><br />
        <%= f.password_field :password_confirmation, class:"user-small-field", autocomplete: "new-password", placeholder:"同じパスワードを入力" %>
      </div>

      <div class="field">
        <label class="form-text">現在お住まいの都道府県【必須】</label><br />
        <%= f.text_field :location, class:"small-field-3", placeholder:"全角で入力" %>
      </div>

      <div class="field">
        <label class="form-text">年齢【必須】</label><br />
        <%= f.text_field :age, class:"small-field-3", placeholder:"半角数字で入力" %>
      </div>

      <div class="field">
        <label class="form-text">訪れた渓谷の数【必須】</label><br />
        <%= f.text_field :canyon_number, class:"small-field-3", placeholder:"半角数字で入力" %>
      </div>

      <div class="field">
        <label class="form-text">趣味など（任意）</label><br />
        <%= f.text_area :hobby, class:"large-field" %>
      </div>

      <div class='form-text-wrap'>
        <label class="form-text">生年月日（任意）</label>
      </div>
      <div class='input-birth-wrap'>
        <%= raw sprintf(
                    f.date_select(
                      :birthday,
                      class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1930,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'),
                    " 年 ", " 月 ") + " 日 " %>
      </div>
      <div>
        <p><%= f.submit "新規登録", class:"send" %></p>
      </div>
    <% end %>      
  </div>
</div>

<div class="tweet-new-nav">
  <%= link_to 'トップページへ戻る', "/", class: "only-top-btn" %>
</div>